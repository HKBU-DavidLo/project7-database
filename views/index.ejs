<%- include('./includes/head.ejs') %>

<div id="projectCarouselIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#projetCarouselIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#projetCarouselIndicators" data-slide-to="1"></li>
        <li data-target="#projetCarouselIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="../img/barrier_free.jpg" alt="Barrier Free">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="../img/bridge_construction.jpg" alt="Bridge Construction">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="../img/expressway.jpg" alt="Expressway construction">
        </div>
    </div>
    <a href="#projectCarouselIndicators" class="carousel-control-prev" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a href="#projectCarouselIndicators" class="carousel-control-next" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Mission Statement section -->
<section class="p-5 mission">
    <div class="container-fluid">
        <!-- section heading -->
        <div class="row text-dark text-center">
            <div class="col m-4">
                <h1 class="display-4 mb-4"><%= __('mission') %></h1>
                <div class="underline mb-4"></div>
                <p class="lead"><%= __('mission text') %></p>
            </div>
        </div>
        <!-- end of section heading -->
        <div class="row my-5">
            <div class="col-md-4 text-center">
                <i class="fas fa-hard-hat fa-7x dl-i"></i>
                <h1 class="mb-3"><%= __('ample experience') %></h1>
                <p class="text-secondary"><%= __('ample exp text') %></p>
            </div>
            <div class="col-md-4 text-center">
                <i class="fas fa-drafting-compass fa-7x dl-i"></i>
                <h1 class="mb-3"><%= __('effective desc') %></h1>
                <p class="text-secondary"><%= __('effective team desc') %></p>
            </div>
            <div class="col-md-4 text-center">
                <i class="fas fa-wrench fa-7x dl-i"></i>
                <h1 class="mb-3"><%= __('timeliness') %></h1>
                <p class="text-secondary"><%= __('timeliness desc') %></p>
            </div>
        </div>
        <!-- button for learning more-->
    </div>
</section>
<!-- end of mission statement -->
<!-- Partners -->
<div class="container-fluid mt-5 px-5" style="background-color: lightgrey;">
    <h1 class="display-4 mb-4 pt-5 text-center"><%= __('clients') %></h1>
    <div class="underline mb-4"></div>
    <div class="d-flex mt-3 flex-wrap align-items-center justify-content-between">
        <img src="../img/cedd.png" class="client-logo">
        <img src="../img/build_king.png" class="client-logo">
        <img src="../img/china_state.jpg" class="client-logo">
        <img src="../img/gammon.png" class="client-logo">
        <img src="../img/leighton.png" class="client-logo">
        <img src="../img/vibro.png" class="client-logo">
    </div>
</div>

